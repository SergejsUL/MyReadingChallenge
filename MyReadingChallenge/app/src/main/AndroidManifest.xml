<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ie.ul.serge.myreadingchallenge">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/LimerickReadersTheme" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/login_screen_title"
            android:theme="@style/LimerickReadersTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BookDetail"
            android:label="@string/title_activity_book_detail"
            android:theme="@style/LimerickReadersTheme" />
        <activity
            android:name=".ChellengeActivity"
            android:label="@string/title_activity_chellenge"
            android:theme="@style/LimerickReadersTheme" />

        <activity android:name=".MyPagesActivity"
             />
        <activity
            android:name=".UserDetails"
            android:label="@string/title_activity_user_details"
            android:theme="@style/LimerickReadersTheme" />
        <activity android:name=".ResetPassword"></activity>
    </application>

</manifest>
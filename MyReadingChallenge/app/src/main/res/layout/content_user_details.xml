<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".UserDetails"
    tools:showIn="@layout/activity_user_details"
    android:orientation="vertical">

    <ImageView
        android:padding="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/cud_user_imageView"
        android:layout_gravity="center"
        android:src="@drawable/user_new"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cud_userNameTextview"
        android:textSize="20dp"
        android:text="Name:"
        android:paddingLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cud_userAgeTextview"
        android:textSize="20dp"
        android:text="Age:"
        android:paddingLeft="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cud_userRankTextview"
        android:textSize="20dp"
        android:text="Ranbk:"
        android:paddingLeft="10dp"/>


</LinearLayout>